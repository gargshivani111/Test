package com.aem.core.servlets;

import org.apache.felix.scr.annotations.sling.SlingServlet;
import org.apache.sling.api.SlingHttpServletRequest;
import org.apache.sling.api.SlingHttpServletResponse;
import org.apache.sling.api.resource.Resource;
import org.apache.sling.api.servlets.SlingAllMethodsServlet;
import org.apache.sling.api.servlets.SlingSafeMethodsServlet;
import org.slf4j.LoggerFactory;

import aQute.lib.osgi.Constants;

import com.mastercard.apie.axon.sdk.core.AxonMessage;
import com.mastercard.apie.axon.sdk.core.AxonService;
import com.mastercard.apie.axon.sdk.core.AxonServiceProducer;

import javax.servlet.ServletException;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.logging.Logger;

/**
 * Servlet that writes some sample content into the response. It is mounted for
 * all resources of a specific Sling resource type. The
 * {@link SlingSafeMethodsServlet} shall be used for HTTP methods that are
 * idempotent. For write operations use the {@link SlingAllMethodsServlet}.
 */
@SuppressWarnings("serial")
@SlingServlet(paths="/bin/generateProductMessage", methods = "GET", metatype=true)
public class GenerateMessageServlet extends SlingSafeMethodsServlet {
	// Create an instance of logger
    private static Logger LOG = (Logger) LoggerFactory.getLogger(GenerateMessageServlet.class);

    @Override
    protected void doGet(final SlingHttpServletRequest req,
            final SlingHttpServletResponse resp) throws ServletException, IOException {
    	AxonServiceProducer producer = AxonService.getProducerBuilder().withProperties("durable_producer.properties").build();
    	
    	resp.setContentType("text/html");
    	PrintWriter out = resp.getWriter();
    	out.println("Servlet is working");
    	String TOPIC_NAME = "integrationandplatformservices.integrationservices.helloworld";
    	// Topic where the message need to be sent.
        String topic = Constants.TOPIC_NAME;
     // Build the message
        AxonMessage msgToBeSent = new AxonMessage("This is a sample message");
     // Send the message using this producer on the given topic.
        producer.sendMessage(msgToBeSent, topic);
        LOG.info("Message sent");
        
        // Destroy the producer to clean the resources.
        producer.destroy();
        
    }
}
